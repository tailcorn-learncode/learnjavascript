datepicker

import { Component } from '@angular/core';
import { MatCalendar } from '@angular/material/datepicker';

@Component({
  selector: 'app-datepicker-header',
  template: `
    <div class="header">
      <span>{{calendar.currentView === 'month' ? 'Depart - Return dates' : calendar.activeDate | date: 'MMMM yyyy'}}</span>
    </div>
  `,
  styles: [`
    .header {
      font-size: 1.2em;
      padding: 8px;
      text-align: center;
    }
  `]
})
export class DatepickerHeaderComponent {
  constructor(public calendar: MatCalendar<Date>) {}
}


<mat-form-field appearance="fill">
  <input matInput [matDatepicker]="picker" placeholder="Select date">
  <mat-datepicker-toggle matSuffix [for]="picker"></mat-datepicker-toggle>
  <mat-datepicker #picker [calendarHeaderComponent]="headerComp"></mat-datepicker>
</mat-form-field>


import { NgModule } from '@angular/core';
import { MatDatepickerModule, MatFormFieldModule, MatInputModule } from '@angular/material';
import { MyDatepickerComponent } from './my-datepicker.component';
import { DatepickerHeaderComponent } from './datepicker-header.component';

@NgModule({
  declarations: [
    MyDatepickerComponent,
    DatepickerHeaderComponent
  ],
  imports: [
    MatDatepickerModule,
    MatFormFieldModule,
    MatInputModule
  ],
  exports: [MyDatepickerComponent],
  entryComponents: [DatepickerHeaderComponent]
})
export class MyDatepickerModule { }


